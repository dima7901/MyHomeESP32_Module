{
  "name": "ESP32 PlatformIO Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "extensions": [
    "platformio.platformio-ide",
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "platformio-ide.autoOpenPlatformIOHome": false
  },
  "postCreateCommand": "sudo apt update && sudo apt install -y python3 python3-pip && pio pkg update",
  "remoteUser": "vscode"
}
